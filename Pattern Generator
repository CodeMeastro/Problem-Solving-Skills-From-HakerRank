#include<iostream>
using namespace std;

int main() {
	int a = 0; int n = 0, p = 0;
	cout << "Enter number:";
	cin >> a;
	for (int i = 0; i < a; i++) {
		if (i + 1 % 2 != 0) {
			 n = i;
		}
		if (i + 1 % 2 != 0) {
			p = i + 1;
		}

		for (int j = 0; j <= i; j++) {
			if ((i + 1) % 2 == 0) {
				cout << p<<"  ";
				p = p + i+1;
			}
			else{
				cout << n + 1<<"   ";
				++n;
			}
		}
		cout << endl;
	}
}
